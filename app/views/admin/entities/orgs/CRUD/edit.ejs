<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EventHQ | admin | orgs</title>
    <link
      rel="shortcut icon"
      href="/private/assets/favicon.svg"
      type="image/x-icon"
    />

    <link rel="stylesheet" href="/admin/assets/global_styles.css" />
    <!-- <link rel="stylesheet" href="/admin/entities/orgs/style.css" /> -->

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <!-- Toastify -->
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/b6798fcdf3.js"
      crossorigin="anonymous"
    ></script>

    <style>
      .custom_gradient a {
        color: #212529;
        text-decoration: none !important;
      }
      .btn_custom.fixed {
        position: fixed;
        top: 4rem;
        left: 5rem;
      }
      .btn_custom {
        font-size: 1.2rem;
        border: 1px solid #212529 !important;
        box-shadow: 0 0 0.7rem 0 #21252958;
        border-radius: 100% !important;

        width: 3rem;
        height: 3rem;
        display: grid;
        place-items: center;

        text-align: center;

        cursor: pointer;
        position: relative;
      }
      .btn_custom::after {
        content: attr(data-description);
        position: absolute;
        top: -2.5rem;
        right: -5rem;

        font-family: var(--txt-font-electrolize);
        font-size: 1rem;

        background-color: var(--txt-clr-grey);
        color: #edf2f8;
        border-radius: 5px;

        width: 5rem;

        opacity: 0;
        pointer-events: none;
      }
      .btn_custom:hover::after {
        opacity: 1;
        transition: all 0.2s linear 0.7s;
      }
      .btn_custom:hover {
        background-color: #ffffffbc;
        box-shadow: 0 0 1.5rem 0 var(--txt-clr-black);
        transition: all ease 0.3s;
      }
    </style>
  </head>
  <body>
    <section class="gradient-custom custom_gradient">
      <a class="btn_custom fixed" href="/admin/orgs/<%=org._id%>"
        ><i class="fa-solid fa-caret-left"></i
      ></a>
      <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-lg-10 col-12">
            <div
              class="card shadow-2-strong card-registration"
              style="border-radius: 15px"
            >
              <div class="card-body p-4 p-md-5">
                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">
                  Edit <%=org.name%>'s information
                </h3>
                <form>
                  <div class="row">
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <input
                          type="text"
                          id="name"
                          class="form-control form-control-lg"
                          value="<%=org.name%>"
                        />
                        <label class="form-label" for="name">Name</label>
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <div class="form-outline">
                        <input
                          type="text"
                          id="location"
                          value="<%=org.location%>"
                          class="form-control form-control-lg"
                        />
                        <label class="form-label" for="location"
                          >Location</label
                        >
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-4 d-flex align-items-center">
                      <div class="form-outline datepicker w-100">
                        <input
                          type="text"
                          class="form-control form-control-lg"
                          id="createdAt"
                          value="<%=new Date(org.createdAt).toISOString().split('T')[0]%>"
                        />
                        <label for="createdAt" class="form-label"
                          >Founded</label
                        >
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">
                      <label for="description">Description</label>
                      <textarea class="form-control" id="description">
<%=org.description%></textarea
                      >
                    </div>
                  </div>

                  <div class="mt-4 pt-2">
                    <input
                      id="submit"
                      class="btn btn-dark btn-lg"
                      type="submit"
                      value="Submit"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Toastify -->
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>

    <!-- axios-->
    <script defer src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>

    <script type="text/javascript">
      async function editOrg() {
        let name = document.getElementById("name");
        let location = document.getElementById("location");
        let description = document.getElementById("description");
        let createdAt = document.getElementById("createdAt");

        const orgInfo = {
          name: name.value,
          location: location.value,
          description: description.value,
          createdAt: new Date(createdAt.value).toISOString(),
        };
        const _id = "<%=org._id%>";
        try {
          const response = await axios.put(`/admin/orgs/edit/${_id}`, {
            info: orgInfo,
            _id: _id,
            model: "org",
          });
          if (response.status == 200) {
            toast("You have successfully updated organization!", "#019b5d");
            setTimeout(() => {
              toast("Redirecting you!", "#019b5d");
            }, 1000);

            setTimeout(() => {
              window.location.href = `/admin/orgs/<%=org._id%>`;
            }, 2200);
          } else {
            toast("Some error occured!", "#ff426b");
          }
        } catch (error) {
          if (error.response) {
            const { data, status, headers } = error.response;
            console.log("Err: ", data);
          }
        }
      }

      document.getElementById("submit").addEventListener("click", () => {
        event.preventDefault();
        editOrg();
      });

      function toast(msg, clr) {
        Toastify({
          text: msg,
          duration: 2000,
          newWindow: true,
          close: true,
          gravity: "top",
          position: "right",
          stopOnFocus: true,
          style: {
            background: clr,
          },
        }).showToast();
      }
    </script>
  </body>
</html>
